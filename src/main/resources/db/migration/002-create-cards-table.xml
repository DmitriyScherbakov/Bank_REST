<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create-cards-table" author="developer">
        <createTable tableName="cards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="encrypted_card_number" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            
            <column name="masked_card_number" type="VARCHAR(19)">
                <constraints nullable="false"/>
            </column>
            
            <column name="card_holder" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="expiry_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            
            <column name="balance" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            
            <column name="owner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="cards"
                baseColumnNames="owner_id"
                constraintName="fk_cards_owner"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
        
        <createIndex tableName="cards" indexName="idx_cards_owner_id">
            <column name="owner_id"/>
        </createIndex>
        
        <createIndex tableName="cards" indexName="idx_cards_status">
            <column name="status"/>
        </createIndex>
        
        <createIndex tableName="cards" indexName="idx_cards_encrypted_number">
            <column name="encrypted_card_number"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>